<%if flash[:notice]%>
  $("#info").html("<%= flash[:notice] %>").show(function() {
    setTimeout(function() {
      $("#info").fadeOut('slow');
    }, 4000)
  });
  $('#invite_email').val("");
  $('#invite-field').hide();
<%elsif flash[:alert]%>
  $("#alert").html("<%= flash[:alert] %>").show(function() {
    setTimeout(function() {
      $("#alert").fadeOut('slow');
    }, 4000)
  })
  $('#invite_email').addClass("border-danger");
<%end%>
<%accounts = current_user.camp.accounts%>
<%pending = current_user.camp.users.select{|u| u.account.nil?}%>
<%unless pending.empty?%>
  $("#pending-staff").html("<%= escape_javascript render 'display_pending_staff', pending: pending %>")
<%end%>
