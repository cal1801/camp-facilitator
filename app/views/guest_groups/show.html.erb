<div class="card mb-3 gg_card">
  <div class="card-body">
    <div class="row justify-content-between">
      <div class="col-auto d-flex">
        <h4 class="card-title mr-3">
          <%if current_user.previously_seen_at.nil?%>
            <span class="text-primary">New</span> -
          <%elsif @guest_group.updated_at > current_user.previously_seen_at%>
            <span class="text-primary">New</span> -
          <%end%>
          <span class="gg_name"><%=@guest_group.name%></span>
        </h4>
      </div>
      <div class="col-auto">
        <h5 class="card-title"><%=@guest_group.arrives.strftime("%a, %b %e")%> - <%=@guest_group.leaves.strftime("%a, %b %e")%></h5>
      </div>
    </div>
    <div class="row justify-content-between">
      <div class="col">
        <span class="text-muted"><%=@guest_group.description%></span>
      </div>
    </div>
    <div id="accordion-gg<%=@guest_group.id%>" class="mt-3">
      <div class="card">
        <div class="card-header" id="headingOne">
          <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-gg<%=@guest_group.id%>" aria-expanded="true" aria-controls="collapse-gg<%=@guest_group.id%>">
              <%=@guest_group.activities.count%> <%="Activity".pluralize(@guest_group.activities.count)%>
            </button>
          </h5>
        </div>

        <div id="collapse-gg<%=@guest_group.id%>" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion-gg<%=@guest_group.id%>">
          <div class="card-body">
            <%@guest_group.activities.each do |activity|%>
              <%=render "activities/display_activity", activity: activity%>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
